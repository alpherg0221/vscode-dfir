{
  "name": "vscode-dfir",
  "version": "0.2.0",
  "engines": {
    "vscode": "^1.82.0"
  },
  "displayName": "DFIR Tool",
  "description": "VSCode Extension for DFIR",
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "contributes": {
    "menus": {
      "editor/title": [
        {
          "command": "vscode-dfir.search-include",
          "group": "navigation",
          "when": "editorLangId == log"
        },
        {
          "command": "vscode-dfir.search-exclude",
          "group": "navigation",
          "when": "editorLangId == log"
        }
      ],
      "view/title": [
        {
          "command": "vscode-dfir.search-ancestor",
          "group": "navigation",
          "when": "view == ancestor-view"
        }
      ]
    },
    "commands": [
      {
        "command": "vscode-dfir.search-include",
        "title": "絞り込み (含む)",
        "category": "dfir-search",
        "icon": "$(search)"
      },
      {
        "command": "vscode-dfir.search-exclude",
        "title": "絞り込み (含まない)",
        "category": "dfir-search",
        "icon": "$(search-stop)"
      },
      {
        "command": "vscode-dfir.search-ancestor",
        "title": "親プロセスを検索",
        "category": "dfir-search",
        "icon": "$(search)"
      }
    ],
    "keybindings": [
      {
        "command": "vscode-dfir.search-include",
        "key": "ctrl+shift+f"
      },
      {
        "command": "vscode-dfir.search-exclude",
        "key": "alt+f"
      }
    ],
    "viewsContainers": {
      "panel": [
        {
          "id": "ancestor",
          "title": "DFIR",
          "icon": "$(type-hierarchy)"
        }
      ]
    },
    "views": {
      "ancestor": [
        {
          "id": "ancestor-view",
          "name": "親プロセス"
        }
      ]
    }
  },
  "main": "./out/main.js",
  "scripts": {
    "vscode:prepublish": "npm run esbuild-base -- --minify",
    "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=out/main.js --external:vscode --format=cjs --platform=node",
    "esbuild": "npm run esbuild-base -- --sourcemap",
    "esbuild-watch": "npm run esbuild-base -- --sourcemap --watch",
    "test-compile": "tsc -p ./"
  },
  "devDependencies": {
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.0",
    "@types/node": "16.x",
    "@types/vscode": "^1.82.0",
    "@typescript-eslint/eslint-plugin": "^5.38.1",
    "@typescript-eslint/parser": "^5.38.1",
    "@vscode/test-electron": "^2.1.5",
    "esbuild": "^0.19.3",
    "eslint": "^8.24.0",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "typescript": "^4.8.4"
  }
}